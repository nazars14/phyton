# Присвоєння двох змінних з будь-якими числоми

a = 5  # Змінна a отримує значення 5
b = 10.5  # Змінна b отримує значення 10.5

# Перевірка значень змінних
print("a:", a)
print("b:", b)

Завдання 2

# Приклад 1: Істина
x = 5
y = 10
z = "привіт"

вираз1 = (x > 0) and (y % 2 == 0) and (z.lower() == "привіт")
print(f"Вираз 1: {вираз1}")  # True

# Приклад 2: Істина
a = 12
b = "привіт"
список = ["привіт", "поки", "до побачення"]

вираз2 = (a % 3 == 0) and (b in список) and (len(список) > 2)
print(f"Вираз 2: {вираз2}")  # True

# Приклад 3: Хибність
c = 0
d = "привіт"
e = "привіт"

вираз3 = (c != 0) and (d != e) and (d == "поки")
print(f"Вираз 3: {вираз3}")  # False

# Приклад 4: Хибність
f = 5
g = "привіт"
h = True

вираз4 = (f % 2 == 0) and (g.isupper()) and (not h)
print(f"Вираз 4: {вираз4}")  # False

