# Приклад 1: Істина
привітання = "Привіт"
ім_я = "Іван"

вираз1 = (привітання.lower() == "привіт") and (ім_я.startswith("І"))
print(f"Вираз 1: {вираз1}")  # True

# Приклад 2: Хибність
email = "ivan.petrov"

вираз2 = (email.endswith(".com") or email.endswith(".ua")) and ("@" in email)
print(f"Вираз 2: {вираз2}")  # False

# Приклад 3: Істина
пароль = "123456789"

вираз3 = (пароль.isdigit()) and (len(пароль) >= 8) and (not пароль.isalpha())
print(f"Вираз 3: {вираз3}")  # True

# Приклад 4: Хибність
текст = "Це речення українською мовою."

вираз4 = текст.isupper() or текст.islower()
print(f"Вираз 4: {вираз4}")  # False

