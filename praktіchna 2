# Приклад 1: Істина
x = 5
y = 10
z = "привіт"

вираз1 = (x > 0) or (y % 2 == 0) or (z.lower() != "привіт")
print(f"Вираз 1: {вираз1}")  # True

# Приклад 2: Істина
a = 11
b = "поки"
список = ["привіт", "поки"]

вираз2 = (a % 3 == 0) or (b not in список) or (len(список) <= 2)
print(f"Вираз 2: {вираз2}")  # True

# Приклад 3: Хибність
c = 0
d = "привіт"
e = "привіт"

вираз3 = (c != 0) or (d != e) or (d == "поки")
print(f"Вираз 3: {вираз3}")  # False

# Приклад 4: Хибність
f = 5
g = "привіт"
h = True

вираз4 = (f % 2 == 0) or (g.isupper()) or (not h)
print(f"Вираз 4: {вираз4}")  # False

